<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="account.reporte_mhernandez">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<div class="page">					
					<div name="invoice_date" class="col-xs-0 col-xs-offset-1">
						<span t-field="o.date_invoice" t-field-options='{"format": "dd"}'/>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
						<span t-field="o.date_invoice" t-field-options='{"format": "MMMM"}'/>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
						&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
						<span t-field="o.date_invoice" t-field-options='{"format": "yyyy",}'/><br/><br/>
					</div>					
					 <div name="invoice_name" class="col-xs-0 col-xs-offset-2">
                    	<address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;name&quot;], &quot;no_marker&quot;: True}"/>
                	 </div>
                	 <!--<div name="invoice_address" class="col-xs-0 col-xs-offset-2">-->
                	 <div class="row">
                	 <div class="col-xs-20">
                	<table class="detalle" border="0" style="width:100%;">
                		
                		<tbody class="invoice_add">
                			<tr>
                				<td>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</td>
                				<td> <span class="col-xs-offset-2" t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True}"/>&#160;&#160;&#160;</td>
                				<td><span  t-field="o.partner_id.vat"/></td>
                			</tr>
                		</tbody>
                	</table>
                </div>
            </div>

                <!--</div>--><br/>
                	  <table class="detalle" border="0" style="width:100%;">
                		<thead>
                			<tr></tr>
                			<tr></tr>
                			<tr></tr>
                			<tr></tr>
                		</thead>
                		<tbody class="add">
                   			 <tr t-foreach="o.invoice_line_ids" t-as="l">
		                        <td class="text-right">
		                            <span t-field="l.quantity"/>
		                            <span t-field="l.uom_id" groups="product.group_uom"/>&#160;&#160;
		                            &#160;&#160;
                        		</td>
                        		<td><span t-field="l.name"/></td>
		                        <td class="hidden"><span t-field="l.origin"/></td>
                       <!-- <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>-->
                       <!-- <td t-if="display_discount" class="text-right">
                            <span t-field="l.discount"/>
                        </td>-->
                        <td class="col-xs-offset-220">
                            <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            		
                	</div>
                	 <div class="footer">
                	 	<div name="invoice_amount_total" class="col-xs-0 col-xs-offset-10">
							<span t-esc="'{0:,.2f}'.format(o.amount_total)"/>
						</div>
    				</div>
				
				</t>
			</t>
		</template>

		<report id="account.factura_mhernandez_template_report"
			name="account.reporte_mhernandez"
			file="account.reporte_mhernandez"
			model="account.invoice"
			report_type="qweb-pdf"
			string="mhernandez"
			menu="True"/>
	</data>
</odoo>